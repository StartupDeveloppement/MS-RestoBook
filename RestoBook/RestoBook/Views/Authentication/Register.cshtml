@model RestoBook.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}


<div class="container">
    <div class="page-header">
        <h1>Inscription</h1>
    </div>


    @Html.ValidationSummary(false)

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.TextBoxFor(u => u.LastName, new { @class = "form-control", @placeholder = "Nom" })
            @Html.ValidationMessageFor(u => u.LastName)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control", @placeholder = "Prénom" })
            @Html.ValidationMessageFor(u => u.FirstName)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @placeholder = "Email", @type = "email" })
            @Html.ValidationMessageFor(u => u.Email)
        </div>

        <input type="hidden" name="Country" value="France" />
        <div class="form-group">
            <button class="btn btn-primary btn-default" type="submit">Inscription</button>
        </div>
    }
</div>


