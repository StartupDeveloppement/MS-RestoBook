</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="bgheader">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RestoBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="navLogin">Login</a>
                        <div class="dropdown-menu" style="padding:17px">
                            @*@(Html.BeginForm("", "", FormMethod.Post,new { @id = "formLogin", @class = "form" }))
                            {
                                <input type="text" />
                                <input type="password" />
                                <button class="btn" type="button">Login</button>
                            }*@
                            <form class="form-group">
                                <input type="text" class="form-control"/>
                                <input type="password"/>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    @*<div class="container body-content">*@
    
        @RenderBody()
    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>